---
import Layout from "@layouts/Main.astro";

type Service = {
  title: string;
  description: string;
  items: string[];
  images: string[];
  fromColor: string;
  toColor: string;
};

const { id } = Astro.params;
const res = await fetch(`${Astro.url.origin}/api/services`);
const services: Service[] = await res.json();
const service = services[Number(id)];
if (!service) throw new Error("Servicio no encontrado");
---

<Layout title={`PROFUSO - ${service.title}`} description={service.description}>
  <section
    id="services"
    class="relative min-h-screen flex items-center py-16 sm:py-20 md:py-24 lg:py-32 px-4 sm:px-6 lg:px-12"
  >
    <div class="max-w-7xl mx-auto w-full">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
        <!-- Bloque 1: Slider de imágenes -->
        <div class="relative space-y-4">
          <!-- Botón volver -->
          <a
            href="/#services"
            class="inline-flex items-center gap-2 rounded-lg bg-gray-900/80 border border-gray-700 px-4 py-2.5 text-sm font-semibold text-white backdrop-blur-sm transition-all hover:bg-gray-800 hover:border-gray-600 hover:scale-105 shadow-lg"
          >
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Volver a servicios
          </a>

          {service.images.length > 0 && (
            <div class="w-full">
              <div
                class="relative w-full aspect-4/3 overflow-hidden rounded-2xl shadow-2xl bg-gray-900 border border-gray-800 group"
                data-slider="detail-slider"
              >
                {service.images.map((img, i) => (
                  <img
                    src={img}
                    alt={`${service.title} imagen ${i + 1}`}
                    class={`absolute inset-0 w-full h-full object-cover transition-opacity duration-1000 ${
                      i === 0 ? "opacity-100" : "opacity-0"
                    }`}
                    loading="lazy"
                    data-image-index={i}
                  />
                ))}
                
                <!-- Botón de zoom -->
                <button data-lightbox="service-gallery" class="absolute top-4 left-4 bg-black/60 hover:bg-black/80 text-white px-3 py-2 rounded-lg text-sm font-semibold backdrop-blur-sm opacity-0 group-hover:opacity-100 transition-all z-20 cursor-pointer">
                  <svg class="w-5 h-5 inline-block mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v6m3-3H7" />
                  </svg>
                  Click para ampliar
                </button>
                
                <!-- Controles del slider -->
                {service.images.length > 1 && (
                  <>
                    <button
                      data-prev
                      class="absolute left-4 top-1/2 -translate-y-1/2 bg-black/60 hover:bg-black/80 text-white p-2 rounded-full backdrop-blur-sm transition-all hover:scale-110 z-10"
                      aria-label="Imagen anterior"
                    >
                      <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                      </svg>
                    </button>
                    <button
                      data-next
                      class="absolute right-4 top-1/2 -translate-y-1/2 bg-black/60 hover:bg-black/80 text-white p-2 rounded-full backdrop-blur-sm transition-all hover:scale-110 z-10"
                      aria-label="Imagen siguiente"
                    >
                      <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </button>
                    
                    <!-- Indicadores -->
                    <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-2 z-10">
                      {service.images.map((_, i) => (
                        <button
                          data-indicator={i}
                          class={`w-2 h-2 rounded-full transition-all ${
                            i === 0 ? "bg-white w-8" : "bg-white/50 hover:bg-white/75"
                          }`}
                          aria-label={`Ir a imagen ${i + 1}`}
                        />
                      ))}
                    </div>
                  </>
                )}
              </div>
            </div>
          )}
        </div>

        <!-- Bloque 2: Contenido -->
        <div class="relative">
          <article class="space-y-8 w-full">
            <header class="space-y-4">
              <div
                class="inline-block px-4 py-2 rounded-full text-sm font-semibold bg-linear-to-r from-blue-500/20 to-teal-500/20 border border-blue-500/30 text-blue-400"
              >
                Servicio
              </div>
              <h1
                class="text-4xl sm:text-5xl lg:text-6xl font-extrabold leading-tight bg-linear-to-r from-white to-gray-300 bg-clip-text text-transparent"
                transition:name={`title-${id}`}
              >
                {service.title}
              </h1>
            </header>

            <p
              class="text-lg sm:text-xl leading-relaxed text-gray-300"
              transition:name={`desc-${id}`}
            >
              {service.description}
            </p>

            {service.items.length > 0 && (
              <div class="space-y-4">
                <h2 class="text-2xl font-bold text-white">Características</h2>
                <ul class="space-y-3">
                  {service.items.map((item) => (
                    <li class="flex items-start gap-3 text-gray-300">
                      <svg class="w-6 h-6 text-blue-500 shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <span class="text-lg">{item}</span>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            <!-- Botón contacto -->
            <div class="pt-6">
              <a
                href="/#contact"
                class="inline-flex items-center gap-2 px-8 py-4 bg-linear-to-r from-blue-600 to-teal-600 hover:from-blue-700 hover:to-teal-700 text-white font-bold rounded-lg shadow-lg hover:shadow-xl transition-all hover:scale-105"
              >
                Solicitar este servicio
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
            </div>
          </article>
        </div>
      </div>
    </div>
  </section>

  <!-- Modal Lightbox -->
  <div id="lightbox-modal" class="fixed inset-0 bg-black/95 z-50 hidden flex-col items-center justify-center p-4" data-lightbox-modal>
    <button class="absolute top-4 right-4 text-white hover:text-gray-300 p-2 z-10" data-lightbox-close>
      <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    
    <div class="relative flex items-center justify-center gap-8" style="max-width: 90vw;">
      <button class="text-white hover:text-gray-300 p-2 z-10" data-lightbox-prev>
        <svg class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>
      <img id="lightbox-image" src="" alt="" class="object-contain rounded-lg" style="max-width: 80vw; max-height: 80vh;" />
      <button class="text-white hover:text-gray-300 p-2 z-10" data-lightbox-next>
        <svg class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>
    
    <!-- Indicadores del lightbox -->
    <div class="mt-6 flex gap-2" data-lightbox-indicators></div>
  </div>

  <script>
    import '@scripts/image-gallery';
  </script>
  <script>
    import '@scripts/detail-navigation';
  </script>
</Layout>
